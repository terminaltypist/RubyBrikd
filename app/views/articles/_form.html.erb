<%# This is a comment -%>
<%# @articles is being called from articles_controller.rb where it links this variable to DB -%>

<%= render 'shared/errors', obj: @article %>

<%# This is the remaining bits of the form %>
<div class="row">
  <div class="col-xs-12">
    <%# form_for is a ruby plugin to assist with forms -%>
    <%= form_for @article do |f| %>

        <%# This is the Title Bar -%>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :title %>
          </div>
          <div class="col-md-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %> </br>
          </div>
        </div>

        <%# This is the Body Paragraph Section -%>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :body %>
          </div>
          <div class="col-md-10">
            <%= f.text_area :body, rows: 10, class: "form-control", placeholder: "Body"  %> </br>
          </div>
        </div>

        <%# This is the Create Button -%>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-8">
            <%= f.submit  class: 'btn btn-primary btn-lg' %>
          </div>
        </div>

        <%# This is the Cancel Button that takes you home -%>
        <div class="form-group">
          <div class=" col-md-2">
            <%= link_to 'Cancel', articles_path, class: "btn btn-primary btn-lg" %>
          </div>
        </div>
    <% end %>
  </div>
</div>