<%= render 'shared/errors', obj: @user %>

<%# This is the remaining bits of the form %>
<div class="row">
  <div class="col-xs-12">
    <%# form_for is a ruby plugin to assist with forms -%>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

        <%# This is the Username -%>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :username %>
          </div>
          <div class="col-md-9">
            <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %> </br>
          </div>
        </div>

        <%# This is the Email -%>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :email %>
          </div>
          <div class="col-md-9">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter email"  %> </br>
          </div>
        </div>

        <%# This is the Password -%>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :password %>
          </div>
          <div class="col-md-9">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter password"  %> </br>
          </div>
        </div>

        <div class="form-group">
          <%# This is the Create Button -%>
          <div class="col-md-offset-2 col-md-8">
            <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: 'btn btn-primary btn-lg') %>
          </div>
          <%# This is the Cancel Button that takes you home -%>
          <div class="col-md-2">
            <%= link_to 'Cancel', articles_path, class: "btn btn-primary btn-lg" %>
          </div>
        </div>
    <% end %>
  </div>
</div>